        self.butt13_button.grid(row=7, column=5, sticky=W, padx=10, pady=10)
        self.butt13_button.configure(font="Arial 10", bd=3, relief="solid", bg="white", text="=", width=10)

 #END OF ROW 5 OF BUTTONS!....................................................................................

 
 

 
        
#..........................FRAMES BELOW..........................#
    def add_cc_frame(self):
        self.cc_frame = Frame()
        self.cc_frame.grid(row=3, column=2, columnspan=2)
        self.cc_frame.configure(bg="#ffe8e8")

        

# Create an object of the Gui class when this module is executed
if (__name__ == "__main__"):
    gui = Gui()
    gui.mainloop()
